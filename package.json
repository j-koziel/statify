{
  "name": "statify",
  "version": "0.0.1",
  "description": "Displays an aesthetic looking profile with your Spotify stats",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "build": "pnpm clean && tsc && pnpm copy-files",
    "copy-files": "cp -r ./src/views ./build/src && cp -r ./src/public ./build/src",
    "clean": "rm -rf ./build",
    "start:dev": "nodemon --exec ts-node ./src/server.ts",
    "start:prod": "node ./build/src/server.js"
  },
  "keywords": ["spotify", "typescript", "app", "web"],
  "author": "Jonathan Koziel",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7",
    "@types/request": "^2.48.8",
    "@types/superagent": "^4.1.18",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "pug": "^3.0.2",
    "querystring": "^0.2.1",
    "superagent": "^8.0.9",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
